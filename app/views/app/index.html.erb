<div id="header">
  <h1 id="logo"><a href="/">Speakeasy</a></h1>
</div><!-- end header -->

<div class="container">
  <div class="chat-room">
    <div class="lobby">
      <div class="header">
        <h1>Lobby</h1>
      </div>
      <ul id="rooms">
      </ul>
      <div id="new_room">
        <h3>Create Room</h3>
        <div class="createRoom">
          <form>
            <input type="text" placeholder="Room name">
            <button>New Room</button>
          </form>
        </div>
      </div>
    </div>

    <div id="messages">
      <ul class="items">
      </ul>
    </div>

    <div class="room-info">
      <div class="header">
        <h1>Room info</h1>
      </div>
      <ul>
        <li>Friend</li>
      </ul>
    </div>
  </div>
  <div class="new">
    <textarea placeholder="Enter a chat..." autofocus="true"></textarea>
    <input type="submit" value="Enter" class="btn" id="scroll"></input>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  jQuery(function(){
    new App({el: $('.container')});
  })
</script>